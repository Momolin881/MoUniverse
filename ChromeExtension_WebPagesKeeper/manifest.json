{
  "manifest_version": 3,
  "name": "WebPages Keeper - Notion助手",
  "version": "1.0.0",
  "description": "快速將網頁內容分類、標記，並複製到Notion。輕鬆建立你的個人知識庫。",
  "action": {
    "default_popup": "popup.html",
    "default_title": "儲存到 Notion"
  },
  "permissions": [
    "activeTab",
    "storage",
    "clipboardWrite"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Alt+Shift+N",
        "mac": "Command+Shift+N"
      },
      "description": "開啟 WebPages Keeper"
    }
  }
}
